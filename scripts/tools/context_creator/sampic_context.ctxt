    Boolean desired = config_.level2_coincidence_ext_gate ? TRUE : FALSE;
    if (current == desired) return;

    check(SAMPIC256CH_SetLevel2CoincidenceModeWithExtTrigGate(&info_, &params_,
                                                              boardIdx_,
                                                              desired),
